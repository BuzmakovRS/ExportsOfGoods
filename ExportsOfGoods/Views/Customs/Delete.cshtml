@model ExportsOfGoods.Models.Customs

@{
    ViewBag.Title = "Delete";
}

<h2 class="bodyheader">Таможни</h2>

<h3 class="bodyheader2">Удаление</h3>
<div>
    <h4>Вы действительно хотите удалить эту запись?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CountrySend)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountrySend.CountryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CountryRec)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountryRec.CountryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color downlink">
            <p>
                <input type="submit" value="Удалить" class="btn btn-sm btn-danger" /> |
                @Html.ActionLink("Вернуться к списку", "Index", new { }, htmlAttributes: new { @class = "btn btn-sm btn-primary" }) 
            </p>
        </div>
    }
</div>
