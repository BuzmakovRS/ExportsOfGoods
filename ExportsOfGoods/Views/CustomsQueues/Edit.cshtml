@model ExportsOfGoods.Models.CustomsQueue

@{
    ViewBag.Title = "Редактирование";
}

<h2 class="bodyheader">Запись на досмотр</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="bodyheader2">Редактирование</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CustomsId, "CustomsId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CustomsId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomsId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PartiId, "PartiId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PartiId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PartiId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeBegInsp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("timeBegInsp", Model.TimeBegInsp, htmlAttributes: new { @class = "form-control datetimepicker" })
                @Html.ValidationMessage("timeBegInsp", "dd.mm.yyyy HH:mm", new { @class = "text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeEndInsp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("timeEndInsp", Model.TimeEndInsp, htmlAttributes: new { @class = "form-control datetimepicker" })
                @Html.ValidationMessage("timeEndInsp", "dd.mm.yyyy HH:mm", new { @class = "text-info" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index", new { }, htmlAttributes: new { @class = "btn btn-sm btn-default" }))
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/datetimepicker");
}
