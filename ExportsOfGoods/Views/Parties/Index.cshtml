@model IEnumerable<ExportsOfGoods.Models.Parti>

@{
    ViewBag.Title = "Партии";
}

<h2 class="bodyheader">Партии</h2>

<p class="btn-bodyheader">
    <i></i>
    @Html.ActionLink("Добавить", "Create", new { }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartiSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InspectionTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InspectionDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PartiSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InspectionTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InspectionDate)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
