@model IEnumerable<ExportsOfGoods.Models.Product>

@{
    ViewBag.Title = "Товары";
}

<h2 class="bodyheader">Товары</h2>

<p class="btn-bodyheader">
    @Html.ActionLink("Добавить", "Create", new { }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer)
        </td>

        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @if (ViewBag.isAdmin != null && ViewBag.isAdmin == true)
            {
                 @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
